{
  "manifest_version": 3,
  "name": "LLM Safety Guard",
  "version": "1.0",
  "description": "Scans page input for unsafe prompts and warns the user.",
  
  "permissions": ["storage", "scripting", "activeTab"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "scanner.js"]
    }
  ]
}

